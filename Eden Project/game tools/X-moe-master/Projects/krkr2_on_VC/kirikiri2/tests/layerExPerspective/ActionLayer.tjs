/**
 * アクション機能を拡張したレイヤ
 */
class ActionLayer extends AffineLayer {

    var _modules;  ///< モジュール保持用配列
    var _inAction; ///< アクション動作中フラグ
    
    /**
     * コンストラクタ
     */
    function ActionLayer(win,par=null) {
        super.AffineLayer(win,par);
        _modules = new Array();
        _inAction = false;
    }

    /**
     * ファイナライザ
     */
    function finalize() {
        stopAction();
        invalidate _modules;
        super.finalize();
    }

    /**
     * 初期化処理
     */
    function reset() {
        stopAction();
        _modules = new Array();
        super.reset();
    }

    /**
     * アクションをスキップするかどうかの指定
     * 標準ではスキップしない。適宜継承すること。
     */
    function isSkip() {
        return false;
    }
    
    /**
     * アクション処理用
     * @param now システム時間
     */
    function actionHandler(now) {
        //Debug.message(this + ":" + now);
        var done = true;
        for (var i=0;i<6; i++) {
            if (_modules[i] != void) {
                _modules[i].run(now, isSkip());
                if (_modules[i].done) {
                    _modules[i] = void;
                } else {
                    done = false;
                }
            }
        }
        if (done) {
            stopAction();
            onActionCompleted();
        }
    }
    
    /**
     * アクションを開始する
     * 複数回呼び出し可能。モジュールの type が異なるものは同時に適用可能
     * @param moduleTyep モジュール種別。LayerModule クラスの子クラスのクラスオブジェクトを指定する
     * @param options パラメータ連想配列
     */
    function beginAction(moduleType, options=%[]) {
        if (typeof moduleType == "Object" && moduleType.LayerModule != void) {
            // モジュールの生成と登録
            var module = new moduleType(this, options);
            _modules[module.type] = module;
        } else {
            throw new Exception("LayerModule を継承したクラスを渡す必要があります");
        }
        if (!_inAction) {
            System.addContinuousHandler(actionHandler);
            _inAction = true;
        }
    }

    /**
     * アクションの強制終了
     */
    function stopAction() {
        //Debug.message("stop");
        if (_inAction) {
            invalidate _modules;
            _modules = new Array();
            System.removeContinuousHandler(actionHandler);
            _inAction = false;
        }
    }
    
    /**
     * アクション終了時に呼び出されるイベント
     */
    function onActionCompleted() {
    }
};

/**
 * レイヤアクションモジュール基底クラス
 */
class LayerModule {

    var type;   /// アクション種別
    var layer;  /// 操作対象レイヤ
    var first;  
    var startTime;
    var time;   // 処理時間
    var delay;  // 開始遅延
    var options;
    var done;

    /**
     * コンストラクタ
     * @param layer レイヤ
     * @param params パラメータ
     */
    function LayerModule(layer, options) {
        this.layer = layer;
        this.options = options;
        delay = options["delay"];
        time  = options["time"];
        first = true;
        startTime = 0;
        done = false;
    }

    /**
     * 処理実行
     * @param now 現在時刻(tick)
     * @param skip スキップ指定
     */
    function run(now, skip) {
        if (first) {
            startTime = now;
            first = false;
        }
        now -= startTime;
        if (delay) {
            now -= delay;
            if (now < 0) {
                return;
            }
        }
        if (time) {
            if (now >= time || skip) {
                now = time;
                done = true;
            }
        }
        action(now);
    }

    /**
     * 処理実行（個別実装)
     * @param now 現在時刻(tick)
     */
    function action(now) {}
};

