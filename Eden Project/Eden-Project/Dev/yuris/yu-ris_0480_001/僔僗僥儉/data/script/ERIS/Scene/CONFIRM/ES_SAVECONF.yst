//■スタティック変数宣言
{
}

//--------------------------------------------------------------------
//■LOOP
//--------------------------------------------------------------------
#=ES.SAVECONF.LOOP
{
	IF[@es.STATE==0] //FADE
	{
		//呼び出し側からのパラメータで、表示するボタングループを変える
		\BT.ACTIVEGROUP(@es.STATE2)

		\SS.FADE(200)
		@es.STATE=100
	}
	IFEND[]

	IF[@es.STATE==101] //[はい]
	{
		\es.S.RETURN(1)
	}
	IFEND[]

	IF[@es.STATE==102] //[いいえ]
	{
		\es.S.RETURN(0)
	}
	IFEND[]

	return[]
}


//@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
//■ボタン処理
//@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@

//■[はい]ボタン -----------------------------------------------------
//
#=ES.SAVECONF.BTN.YES.ON { @es.STATE=101; return[] }

//■[いいえ]ボタン ---------------------------------------------------
//
#=ES.SAVECONF.BTN.NO.ON { @es.STATE=102; return[] }

//■[次回以降表示しない]ボタン ---------------------------------------
//
//#=ES.SAVECONF.BTN.NEXT.ON { \BT.ONOFF.GET($es.BID, 0)(@es.GSD(114,06)); @es.GSD(114,06)=1-@es.GSD(114,06); return[] }
#=ES.SAVECONF.BTN.NEXT.ON
{
	IF[@_PINT(1)==1] //セーブ確認
		\BT.ONOFF.GET($es.BID, 1)(@es.GSD(114,06))
		@es.GSD(114,06)=1-@es.GSD(114,06)
	IFEND[]
	IF[@_PINT(1)==2] //上書きセーブ確認
		\BT.ONOFF.GET($es.BID, 2)(@es.GSD(114,07))
		@es.GSD(114,07)=1-@es.GSD(114,07)
	IFEND[]
	return[]
}


