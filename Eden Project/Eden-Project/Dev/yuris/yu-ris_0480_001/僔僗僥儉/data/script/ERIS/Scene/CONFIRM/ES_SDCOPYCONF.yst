//■スタティック変数宣言
{
}

//--------------------------------------------------------------------
//■LOOP
//--------------------------------------------------------------------
#=ES.SDCOPYCONF.LOOP
{
	IF[@es.STATE==0] //FADE
	{
		//呼び出し側からのパラメータで、表示するボタングループを変える
		\BT.ACTIVEGROUP(@es.STATE2)

		\SS.FADE(200)
		@es.STATE=100
	}
	IFEND[]

	IF[@es.STATE==101] //[はい]
	{
		\es.S.RETURN(1)
	}
	IFEND[]

	IF[@es.STATE==102] //[いいえ]
	{
		\es.S.RETURN(0)
	}
	IFEND[]

	return[]
}


//@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
//■ボタン処理
//@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@

//■[はい]ボタン -----------------------------------------------------
//
#=ES.SDCOPYCONF.BTN.YES.ON { @es.STATE=101; return[] }

//■[いいえ]ボタン ---------------------------------------------------
//
#=ES.SDCOPYCONF.BTN.NO.ON { @es.STATE=102; return[] }

//■[次回以降表示しない]ボタン ---------------------------------------
//
#=ES.SDCOPYCONF.BTN.NEXT.ON { \BT.ONOFF.GET($es.BID, 0)(@es.GSD(114,09)); @es.GSD(114,09)=1-@es.GSD(114,09); return[] }


