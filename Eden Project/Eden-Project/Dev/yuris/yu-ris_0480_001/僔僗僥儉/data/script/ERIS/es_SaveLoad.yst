//		\BT.ID.OVER.GET($BID+"BTN.THUMB", @mLC)
//		CGACT[ID="_TMP_OV" ID2=$_RSTR(1) MERGE2=1 X=0 Y=0]
		CGEND[ID="_TMP_OF"]
//		CGEND[ID="_TMP_OV"]

	//------------------------------------------------------
	// テキスト読込
	//------------------------------------------------------
		\es.SL.LOADDATA($ref_text(), @sno, 0004) // テキスト


		\BT.CGCLEAR($BID+"TIP.TX", @mLC)
		LOOP[SET=(16)-1]
		{
			@mx=4
			@my=(4)+(@SL.TX.SY+@T(11,22))*(@_LC-1)
	//		IF[@_LC==1] { @mx=50; @my=09 } IFEND[]

