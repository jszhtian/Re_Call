//====================================================================
//■セーブデータ削除処理
//@_PINT(1):セーブファイル番号
//====================================================================
#=es.SAVEDEL
{
//	\_gosub(ES.SAVELOAD.VoicePlay.1) //ボイス再生

	GOSUB[#=es.SL.FILENAME.GET pint=@_PINT(1)] //ファイル名取得

	FILEACT[FILE=$es.SAVEPATH+$_RSTR(1) DELETE=1] //ファイル削除

	return[]
}


//====================================================================
//■セーブデータコピー処理
//@_PINT(1):セーブファイル番号(コピー元)
//@_PINT(2):セーブファイル番号(コピー先)
//====================================================================
#=es.SAVECOPY
{
//	\_gosub(ES.SAVELOAD.VoicePlay.2, @_PINT(1), @_PINT(2)) //ボイス再生

	GOSUB[#=es.SL.FILENAME.GET pint=@_PINT(1)] STR[$src=$es.SAVEPATH+$_RSTR(1)] //ファイル名取得
	GOSUB[#=es.SL.FILENAME.GET pint=@_PINT(2)] STR[$dst=$es.SAVEPATH+$_RSTR(1)] //ファイル名取得

	FILEACT[COPY=1 FILE=$src FILE2=$dst] //コピー

	return[]
}


//====================================================================
//■セーブデータ有効チェック(番号指定)
//@_PINT(1):セーブファイル番号
//@_RINT(1):有効なら 1, 無効なら 0
//====================================================================
#=es.SL.CHECK
{
	GOSUB[#=es.SL.FILENAME.GET pint=@_PINT(1)] //ファイル名取得

	GOSUB[#=es.SaveDataCheck pstr=$_RSTR(1)] //有効チェック

	return[rint=@_RINT(1)]
}


//====================================================================
//■セーブデータ有効チェック(ファイル名指定)
//$_PSTR(1):セーブファイル名(フォルダ名除く)
//@_RINT(1):有効なら 1, 無効なら 0
//====================================================================
#=es.SaveDataCheck
{
	INT[@ret]
	INT[@chk]

	\_file.info.exist($es.SAVEPATH+$_PSTR(1))	//セーブファイルが存在するか否か
	IF[@_RINT(1)]
		LOAD[FILE=$_PSTR(1) DNO=0001 LET=@chk]	//セーブデータバージョンが同じか否か
		@ret=(@chk==\VERNO.SAVEDATA)
	IFEND[]

	return[rint=@ret]
}


