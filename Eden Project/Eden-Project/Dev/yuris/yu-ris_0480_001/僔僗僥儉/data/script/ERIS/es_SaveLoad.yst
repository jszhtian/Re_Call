		CGACT[ID="_TMP_OF" AKARUSA=1 SET=(256)*128/256]
//		CGACT[ID="_TMP_OV" AKARUSA=1 SET=(256)*128/256]
		\BT.ID.OFF.GET($BID+"BTN.THUMB", @mLC)
