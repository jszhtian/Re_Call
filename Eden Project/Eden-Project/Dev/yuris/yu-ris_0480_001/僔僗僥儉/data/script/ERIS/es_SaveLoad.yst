			IFEND[]
		}
		IFEND[]
		IF[@MODE==1] //クイックデータ
		{
			IF[(@mLC+@NO)==1] //最後にセーブしたセーブデータ番号
			{
				@mx = 179
				@my = 061 + 71*((@mLC)-1) + 14
