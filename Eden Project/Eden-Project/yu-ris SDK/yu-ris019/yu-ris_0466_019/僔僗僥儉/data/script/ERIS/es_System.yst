//----------------------------------------------------------------
//■乱数
//----------------------------------------------------------------
#=es.RND
{
	INT[@ret]

	INT[@val1=@_PINT(1)]
	INT[@val2=@_PINT(2)]
	INT[@per1=@_PINT(3)]
	INT[@per2=@_PINT(4)]
	INT[@val3=@_PINT(5)]
	INT[@val4=@_PINT(6)]

	IF[@per2>@per1] @per2=@per1 IFEND[] //3分の4 → 3分の3にする

	\_rnd(1,@per1)
	IF[@per1>0 && @per2>0 && @_RINT(1)<=@per2]
	{
		\_rnd(@val3,@val4)
		@ret=@_RINT(1)
	}
	ELSE[]
	{
		\_rnd(@val1,@val2)
		@ret=@_RINT(1)
	}
	IFEND[]

	return[rint=@ret]
}


