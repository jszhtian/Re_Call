//■スタティック変数宣言
{
}

//--------------------------------------------------------------------
//■LOOP
//--------------------------------------------------------------------
#=ES.SAVECONF.LOOP
{
	IF[@es.STATE==0] //FADE
	{
		//呼び出し側からのパラメータで、表示するボタングループを変える
		\BT.ACTIVEGROUP(@es.STATE2)

		\SS.FADE(200)
		@es.STATE=100
	}
	IFEND[]

	IF[@es.STATE==101] //[はい]
	{
		\es.S.RETURN(1)
	}
	IFEND[]

	IF[@es.STATE==102] //[いいえ]
	{
		\es.S.RETURN(0)
	}
	IFEND[]

	return[]
}


//@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
//■ボタン処理
//@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@

//■[はい]ボタン -----------------------------------------------------
//
#=ES.SAVECONF.BTN.YES.ON { @es.STATE=101; return[] }

//■[いいえ]ボタン ---------------------------------------------------
//
#=ES.SAVECONF.BTN.NO.ON { @es.STATE=102; return[] }

