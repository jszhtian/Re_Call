{
	IF[@_PINT(1)==0] //タイトル確認
		\es.S.GOSUB.OVER("ES.TITLECONF", 0, 0, 901, 0)
	IFEND[]
	IF[@_PINT(1)==1] //タイトル確認(DIALOG)
		GOSUB[#=ES.TITLECONF.DIALOG]
		IF[@_RINT(1)==1]
			GOSUB[#=es.CGTSS.2]
			\es.S.RETURN.LBL("ES.GAMEMAIN", 900, 0)
		IFEND[]
	IFEND[]
	return[]
}

