#=ES.SAVE.BTN.PLATECHECK.ON
{
	INT[@no=@_PINT(1)]
	INT[@grpno = @es.GSD(150,01)]

	@es.GSD(091,@grpno) ^= @es.POW2( @no%63 ) //特定bitを反転する

	GOSUB[#=ES.SL.LOCK.REF pstr=$BID]	//プレートロック更新
	return[]
}

